<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed -->
    <item android:drawable="@color/selectedColor" android:state_pressed="true"/>
    <!-- focused -->
    <item android:state_enabled="true" android:state_pressed="true" android:drawable="@color/selectedColor" />
    <item android:state_enabled="true" android:state_focused="true" android:drawable="@color/selectedColor" />
    <item android:state_enabled="true" android:state_selected="true" android:drawable="@color/selectedColor" />
    <item android:drawable="@color/selectedColor" android:state_activated="true"/>
    <item
        android:drawable="@color/defaultColor" />

</selector>