<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dknig.mystroke">

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />-

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EventTab"
            android:windowSoftInputMode="adjustNothing">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dknig.mystroke.MainActivity" />
        </activity>
        <activity android:name=".StaffTab">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dknig.mystroke.MainActivity" />
        </activity>
        <activity android:name=".MoodTab">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dknig.mystroke.MainActivity" />
        </activity>
        <activity
            android:name=".pop"
            android:theme="@style/AppTheme.CustomTheme"></activity>
        <activity android:name=".AcitivityTab">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dknig.mystroke.MainActivity" />
        </activity>
    </application>

</manifest>